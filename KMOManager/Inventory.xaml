<Page x:Class="KMOManager.Inventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KMOManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inventory">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="50">
            <Button x:Name="btnProducts" Content="Products" Width="100" Margin="0,0,10,0" Click="Products_Click"/>
            <Button x:Name="btnAudience" Content="Audience" Width="100" Margin="0,0,10,0" Click="Audience_Click"/>
            <Button x:Name="btnCategory" Content="Category" Width="100" Margin="0,0,10,0" Click="Category_Click"/>
        </StackPanel>

        <Frame x:Name="Content" VerticalAlignment="Top" Height="500" Margin="0,50,0,0" NavigationUIVisibility="Hidden"/>
        
    </Grid>
</Page>
